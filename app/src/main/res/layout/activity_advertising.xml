        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="点击跳过"
        android:background="@drawable/text_back"/>

</RelativeLayout>