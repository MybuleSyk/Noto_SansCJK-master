<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:textColor="@color/textcolor"
        android:layout_marginLeft="76px"
        android:layout_marginTop="247px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="告别维修小广告"
        android:textSize="49px"/>

    <LinearLayout
        android:layout_marginTop="319px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/redtext"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更全更安全"
            android:layout_marginLeft="75px"
            />
        <TextView
            android:textStyle="bold"
            android:textSize="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="的电器维修专家"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="72px"
        android:layout_marginRight="72px">

        <EditText
            android:inputType="number"
            android:maxLength="11"
            android:id="@+id/name"
            android:paddingBottom="25px"
            android:textSize="28px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:hint="输入有效手机号"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:maxLength="4"
                android:inputType="number"
                android:id="@+id/password"
                android:paddingBottom="20px"
                android:layout_weight="1"
                android:textColorHint="@color/hint"
                android:textSize="28px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="短信验证码"
                />

            <Button
                android:id="@+id/getcode"
                android:background="#00000000"
                android:textColor="@color/code"
                android:textSize="28px"
                android:text="获取验证码"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="200px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72px"
        android:layout_marginRight="72px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/login"
            android:textColor="@color/white"
            android:background="@drawable/roundbut"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:text="登录"
            android:textSize="48px"
            />

        <LinearLayout
            android:layout_marginTop="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:textSize="24px"
            android:textColor="@color/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未注册将创建账号，注册即表明同意"/>

            <TextView
                android:textSize="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户许可协议"
                android:textColor="@color/fillingbut"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>