<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/shopxx_titile"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百迅维修"
            android:textSize="30px" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/back"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/hider"></View>


        <ImageView
            android:layout_margin="2px"
            android:layout_width="match_parent"
            android:layout_height="445px"
            android:src="@drawable/music"
            android:id="@+id/shopxximg" />

        <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_marginLeft="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺地址："
            />
        <TextView
            android:id="@+id/address"
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_marginLeft="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国贸店国贸街666号"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/hider"
        ></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_marginLeft="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺介绍："
            />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_marginTop="14px"
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_marginLeft="12px"
            android:layout_marginBottom="22px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业的技术团队，师傅从事维修手机行业十二年之久"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/hider"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="22px"
            android:textColor="@color/shopxx"
            android:textSize="28px"
            android:layout_marginLeft="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修业务："
            />

        <TextView
            android:id="@+id/tip"
            android:layout_marginTop="14px"
            android:textColor="@color/shopxx"
            android:textSize="18px"
            android:layout_marginLeft="12px"
            android:layout_marginBottom="22px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业的技术团队，师傅从事维修手机行业十二年之久"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10px"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="星级评价"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="9px"
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"/>

                    <LinearLayout
                        android:layout_marginLeft="9px"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />

                        <ImageView
                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />
                        <ImageView

                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />
                        <ImageView
                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="9px"
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修质量"/>

                    <LinearLayout
                        android:layout_marginLeft="16px"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="9px"
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修速度"/>

                    <LinearLayout
                        android:layout_marginLeft="16px"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="9px"
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修价格"/>

                    <LinearLayout
                        android:layout_marginLeft="16px"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_margin="10px"
                            android:layout_width="18px"
                            android:layout_height="18px"
                            android:src="@drawable/star"
                            />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_marginTop="69px"
                android:gravity="center"
                android:text="4.7"
                android:textSize="72px"
                android:layout_marginBottom="69px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"></LinearLayout>


    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="98px">


        <TextView
            android:textColor="@color/pice"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="联系商家"/>


        <TextView
            android:background="@color/pice"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="直接下单"/>

    </LinearLayout>
    


</RelativeLayout>