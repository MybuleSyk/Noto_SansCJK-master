<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="图文维修"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/tuwen_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="13px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17px"
            android:text="维修内容"
            android:textColor="@color/black"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193px"
            android:layout_marginLeft="17px"
            android:layout_marginRight="17px"
            android:layout_marginTop="12px"
            android:background="@drawable/jianyi">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:layout_marginRight="22px"
                android:layout_marginTop="16px"
                android:background="@color/white"
                android:cursorVisible="false"
                android:hint="请输入您设备发生损坏的问题或导致的原因，方便维修人员能快速为您判断"
                android:textSize="24px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/wu_img"
            android:layout_width="88px"
            android:layout_height="88px"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="18px"
            android:layout_marginTop="8px"
            android:background="@drawable/thecamera"
            android:visibility="visible" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycy_img"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="7px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="@color/hider"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="维修地址："
            android:textColor="@color/black"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="朝阳区双桥地铁站"
            android:textColor="@color/black"
            android:textSize="28px" />

        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginRight="27px"
            android:background="@drawable/address" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="手机号码："
            android:textColor="@color/black"
            android:textSize="28px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27px"
            android:background="@color/white"
            android:hint="输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="28px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="维修型号："
            android:textColor="@color/black"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="华为"
            android:textColor="@color/black"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/xuanze_img"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginRight="27px"
            android:background="@drawable/more_unfold1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="19px"
        android:background="@color/hider"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_weight="1"
            android:text="可用优惠"
            android:textColor="@color/black"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27px"
            android:text="5"
            android:textColor="@color/redtext"
            android:textSize="28px" />
    </LinearLayout>

    <Button
        android:id="@+id/tuwen_but"
        android:layout_width="500px"
        android:layout_height="74px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:background="@drawable/backbutr"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="30px" />

</LinearLayout>