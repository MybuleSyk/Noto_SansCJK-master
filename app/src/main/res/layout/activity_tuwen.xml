<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical">

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图文维修"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/tuwen_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/back"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="13px"
        android:background="@color/hider"></View>

<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="17px"
        android:textColor="@color/black"
        android:textSize="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="维修内容"/>

    <LinearLayout
        android:background="@drawable/jianyi"
        android:layout_width="match_parent"
        android:layout_height="193px"
        android:layout_marginTop="12px"
        android:layout_marginLeft="17px"
        android:layout_marginRight="17px"
        >

        <EditText
            android:layout_marginTop="16px"
            android:layout_marginRight="22px"
            android:layout_marginLeft="22px"
            android:background="@color/white"
            android:textSize="24px"
            android:hint="请输入您设备发生损坏的问题或导致的原因，方便维修人员能快速为您判断"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <ImageView
        android:visibility="visible"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="18px"
        android:id="@+id/wu_img"
        android:layout_width="88px"
        android:layout_height="88px"
        android:background="@drawable/thecamera" />


    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recycy_img"
        android:layout_marginTop="7px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="@color/hider"></View>


    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_marginLeft="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修地址："/>

        <TextView
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝阳区双桥地铁站"/>
        <ImageView
            android:background="@drawable/address"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginRight="27px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_marginLeft="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码："/>
        <EditText
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginRight="27px"
            android:hint="输入您的手机号码"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/hider"></View>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_marginLeft="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修型号："/>

        <TextView
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华为"/>
        <ImageView
            android:id="@+id/xuanze_img"
            android:background="@drawable/more_unfold1"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginRight="27px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="19px"
        android:background="@color/hider"></View>


    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_marginLeft="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用优惠"/>

        <TextView
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27px"
            android:text="5"
            android:textColor="@color/redtext"/>
    </LinearLayout>
    <Button
        android:id="@+id/tuwen_but"
        android:background="@drawable/backbutr"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:textSize="30px"
        android:layout_width="500px"
        android:layout_height="74px"
        android:text="确认"/>
    
</LinearLayout>