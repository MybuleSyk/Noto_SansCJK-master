<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="21px"
        android:layout_marginRight="21px"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:background="@drawable/classification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0px"
                android:text="分类" />

        </LinearLayout>

        <EditText
            android:layout_width="480px"
            android:layout_height="63px"
            android:layout_marginLeft="18px"
            android:background="@drawable/graybutr" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fabu_img"
                android:layout_width="44px"
                android:layout_height="44px"
                android:background="@drawable/release" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0px"
                android:text="发布" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/xinxi_img"
                android:layout_width="44px"
                android:layout_height="44px"
                android:background="@drawable/information" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="18px"
        android:background="@color/hider"></View>
    <ListView
        android:dividerHeight="19px"
        android:divider="@color/hider"
        android:id="@+id/my_listviw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>



</LinearLayout>