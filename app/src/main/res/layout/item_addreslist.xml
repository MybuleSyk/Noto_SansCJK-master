<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="206px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="38px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="28px"
                android:textColor="@color/black"
                android:layout_marginLeft="27px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钢铁军团"
                />
            <TextView
                android:layout_marginRight="27px"
                android:gravity="right"
                android:textSize="28px"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18576427223"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/adressname"
            android:layout_marginLeft="27px"
            android:layout_marginTop="42px"
            android:textSize="28px"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北辰东街与永安路交口北500米"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/introduction"></View>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:orientation="horizontal"
        >

        <CheckBox
            android:gravity="center"
            android:layout_marginLeft="27px"
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"/>
        
        
        <LinearLayout
           android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35px"
                android:layout_height="35px"
                android:src="@drawable/theeditor"/>
            <TextView
                android:layout_marginLeft="10px"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                />

            <ImageView
                android:layout_marginLeft="45px"
                android:layout_gravity="center"
                android:layout_width="35px"
                android:layout_height="35px"
                android:src="@drawable/delete"/>
            <TextView
                android:layout_marginRight="27px"
                android:layout_marginLeft="10px"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                />
            
        </LinearLayout>


    </LinearLayout>


</LinearLayout>