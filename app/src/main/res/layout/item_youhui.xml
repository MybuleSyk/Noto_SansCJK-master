<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
       >

        <ImageView
            android:id="@+id/youhui_img"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@drawable/youhui_t"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="44px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_marginTop="28px"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修屏幕送挂坠"/>
            <TextView
                android:id="@+id/text_time"
                android:layout_marginTop="23px"
                android:textColor="@color/black"
                android:textSize="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-05-23到期"/>
            <TextView
                android:layout_marginTop="44px"
                android:textColor="@color/youhui"
                android:textSize="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修屏幕送挂坠"
                android:layout_marginBottom="10px"/>

        </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="10px"
                android:gravity="center"
                android:layout_marginRight="40px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jiazhi"
                    android:textColor="@color/black"
                    android:textSize="18px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价值："/>


                <TextView
                    android:id="@+id/qian"
                    android:textColor="@color/money"
                    android:textSize="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"/>

                <TextView
                    android:id="@+id/money"
                    android:textColor="@color/money"
                    android:textSize="48px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/shiyong"
            android:layout_marginBottom="10px"
            android:textColor="@color/white"
            android:textSize="45px"
            android:layout_marginRight="30px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="去使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>